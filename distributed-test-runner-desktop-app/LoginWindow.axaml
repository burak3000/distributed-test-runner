<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="distributedtestrunnerdesktopapp.LoginWindow"
        Title="LoginWindow">
        <Grid ShowGridLines="True" Margin="5"
                ColumnDefinitions="120, 100" 
                RowDefinitions="Auto, Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0">User name</Label>
                <TextBox Grid.Row="0" Grid.Column="1"/>
                <Label Grid.Row="1" Grid.Column="0">Password</Label>
                <TextBox Grid.Row="1"  Grid.Column="1" PasswordChar="*"/>
                <Button Grid.Row="2"  Grid.Column="1">Login</Button>
        </Grid>
</Window>

